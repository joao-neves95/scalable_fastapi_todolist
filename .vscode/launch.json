{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Auth API - Python Debugger",
            "type": "debugpy",
            "request": "launch",
            "python": "${workspaceFolder}/auth_api/.venv/bin/python",
            "module": "uvicorn",
            "args": [
                "main:app",
                "--reload",
                "--app-dir",
                "auth_api"
            ],
            "envFile": "${workspaceFolder}/.env",
            "jinja": true
        },
        {
            "name": "Auth API - Attach to docker container",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "127.0.0.1",
                "port": 5678
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "/app"
                },
            ],
        },
        {
            "name": "Users API - Attach to docker container",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "127.0.0.1",
                "port": 5679
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "/app"
                },
            ],
        },
        {
            "name": "Todo API - Attach to docker container",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "127.0.0.1",
                "port": 5680
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "/app"
                },
            ],
        },
    ],
    "compounds": [
        {
            "name": "Attach to all docker-compose containers",
            "configurations": [
                "Auth API - Attach to docker container",
                "Users API - Attach to docker container",
                "Todo API - Attach to docker container"
            ]
        }
    ]
}